<!DOCTYPE html>

<html>

<body>

<div class="blur-box">
  <table>
    <tr>
      <td><p class="header"> <%= t(:'.registration') %> </p></td>
    </tr>
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), data: {turbo: false}) do |f| %>
      <tr><td><%= render "devise/shared/error_messages", resource: resource %></td></tr>

      <tr><td>
        <div class="field">
          <%= f.label :email, class:"text"%><br />
          <%= f.email_field :email, autofocus: true, autocomplete: "EMAIL", class:"sign-in-field"%>
        </div>
      </td></tr>

      <tr><td>
        <div class="field">
          <%= f.label :PASSWORD, class:"text"%>
          <% if @minimum_password_length %>
            <em class="text">(<%= @minimum_password_length %> <%= t(:'.char_min') %> )</em>
          <% end %><br />
          <%= f.password_field :password, autocomplete: "new-password", class:"sign-in-field"%>
        </div>
      </td></tr>

      <tr><td>
        <div class="field">
          <%= f.label :PASSWORD_CONFIRMATION, class:"text"%><br />
          <%= f.password_field :password_confirmation, autocomplete: "new-password", class:"sign-in-field"%>
        </div>
      </td></tr>

      <tr><td>
        <div class="smaller-floating-button sign-up-f-b">
          <%= f.submit t(:'.signup'), class:"cancel-button"%>
        </div>
      </td></tr>
    <% end %>

    <tr><td>
      <div class="profile-floating-button s-i-f-b"><%= button_to "", root_path, :method => :get, :class => "back"%></div>
    </td></tr>

    <tr><td>
      <%= render "devise/shared/links" %>
    </td></tr>
  </table>
</div>


</body>

</html>

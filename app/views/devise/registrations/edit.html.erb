<!DOCTYPE html>

<html>


<body>

<div class="blur-box bigger-box">
  <table class="edit-profile-table-box">
    <tr>
      <td colspan="2"><p class="text header"> <%= t(:'.edit_profile') %></p></td>
    </tr>
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put, data: {turbo: false} }) do |f| %>
      <tr><td colspan="2">
        <%= render "devise/shared/error_messages", resource: resource %>
      </td></tr>

      <tr>
        <div class="field">
          <td><%= f.label :email, class:"text"%></td>
          <td><%= f.email_field :email, autofocus: true, autocomplete: "email", class:"sign-in-field"%></td>
        </div>
      </tr>

      <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
        <tr><td>
          <div> <%= t(:'.waiting_for_conformation') %> <%= resource.unconfirmed_email %></div>
        <tr><td>
      <% end %>

      <tr>
        <div class="field">
          <td><%= f.label t(:'.password'), class:"text"%> </td>
          <td><%= f.password_field :password, autocomplete: "new-password", class:"sign-in-field"%><br />
            <% if @minimum_password_length %>
              <em class="small-text"><%= @minimum_password_length %> <%= t(:'.min_char') %></em>
            <% end %></td>
        </div>
      </tr>

      <tr>
        <div class="field">
          <td><%= f.label t(:'.password_confirmation'), class:"text"%></td>
          <td><%= f.password_field :password_confirmation, autocomplete: "new-password", class:"sign-in-field"%></td>
        </div>
      </tr>

      <tr>
        <div class="field">
          <td><%= f.label t(:'.current_password'), class:"text"%> <i class="small-text"><br /> <%= t(:'.confirm') %> </i></td>
          <td><%= f.password_field :current_password, autocomplete: "current-password", class:"sign-in-field"%></td>
        </div>
      </tr>

      <tr><td>
        <p class="small-text"> <%= t(:'.cancel_my_accaunt') %> </p>
      </td>
        <td><div class="smaller-floating-button log-in-f-b "><%= button_to t('.cancel'), registration_path(resource_name), data: { confirm: t(:'.are_you_sure') }, method: :delete, class:"cancel-button"%></div></td>
      </tr>

      <tr><td colspan="2">
        <div class="smaller-floating-button u-p-2-f-b">
          <%= f.submit "EDIT", class:"cancel-button"%>
        </div>
      </td></tr>
    <% end %>

    <tr><td>
      <div class="u-p-f-b"><%= button_to "", main_profile_path, :method => :get, :class => "back"%></div>
    </td></tr>

  </table>
</div>

</body>

</html>
